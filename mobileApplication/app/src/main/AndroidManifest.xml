<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".TaxiApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_taxi"
        android:label="@string/company_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Taxi_Project">
        <activity
            android:name=".ui.add_driver.DriverActivationActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:scheme="http"
                    android:host="localhost"
                    android:port="4200"
                    android:pathPrefix="/driver-activation"/>
            </intent-filter>

        </activity>
        <activity
            android:name=".ui.add_driver.AddDriverActivity"
            android:exported="false" />
        <activity
            android:name=".ui.report.UsageReportsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.edit.AdminDriverChangeRequestsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.block.AdminBlockUserActivity"
            android:exported="false" />
        <activity
            android:name=".ui.about.AboutUsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.ride.ScheduledActivity"
            android:exported="false" />
        <activity
            android:name=".ui.ride.FavoriteRide"
            android:exported="false" />
        <activity
            android:name=".ui.ride.FavoritesActivity"
            android:exported="false" />
        <activity
            android:name=".AdminActivity"
            android:exported="false" />
        <activity
            android:name=".DriverActivity"
            android:exported="false" />
        <activity
            android:name=".UserActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.AuthActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="localhost"
                    android:pathPrefix="/reset-password"
                    android:port="4200"
                    android:scheme="http" />
                <data
                    android:host="localhost"
                    android:pathPrefix="/activation"
                    android:port="4200"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.menu.BaseNavDrawerActivity"
            android:exported="false" />
        <activity
            android:name=".ui.shared.InfoMessageActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profile.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profile.ChangePasswordActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.active_ride.AdminActiveRidesActivity"
            android:exported="false"
            android:label="Active Rides" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.KomsilukTaxi.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.price.UpdatePricingActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.passenger.ride_history.PassengerRideHistoryActivity"
            android:exported="false"/>
        <activity
            android:name=".ui.admin.ride_history.AdminRideHistoryActivity"
            android:exported="false"/>
        <activity android:name=".ui.driver_history.DriverHistoryActivity" />
    </application>

</manifest>