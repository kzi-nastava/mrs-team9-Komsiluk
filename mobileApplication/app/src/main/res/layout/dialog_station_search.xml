<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialogRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_panel_yellow_border"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_station_title"
        android:textColor="@color/secondary"
        android:textSize="@dimen/fs_h2"
        android:fontFamily="@font/roboto_serif_semibold"/>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/station_pick_hint"
        android:textColor="@color/white"
        android:textSize="@dimen/fs_md"
        android:fontFamily="@font/roboto_serif_medium"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp"
        android:background="@color/secondary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/etQuery"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="@drawable/bg_input_normal"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text"
            android:textColorHint="@color/primary_dark"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_medium"
            android:hint="@string/hint_station"
            android:imeOptions="actionSearch"
            android:singleLine="true"/>

        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_icon_square"
            android:padding="10dp"
            android:src="@drawable/search"
            android:contentDescription="@string/cd_search"
            app:tint="@color/primary"/>
    </LinearLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginTop="12dp"
        android:divider="@color/secondary"
        android:dividerHeight="1dp"
        android:overScrollMode="never"/>

</LinearLayout>
