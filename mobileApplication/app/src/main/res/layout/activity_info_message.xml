<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.shared.InfoMessageActivity">

    <ScrollView
        android:id="@+id/infoScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <LinearLayout
                android:id="@+id/infoPanel"
                android:layout_width="560dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@drawable/bg_panel_dark">

                <TextView
                    android:id="@+id/tvInfoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_default_title"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_serif_semibold"
                    android:textSize="@dimen/fs_h2" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/tvInfoMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/info_default_message"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fs_md"
                    android:fontFamily="@font/roboto_serif_medium"
                    android:lineSpacingExtra="2dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnInfoDone"
                    style="@style/Widget.Button.Primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_gravity="end"
                    android:text="@string/btn_done" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
