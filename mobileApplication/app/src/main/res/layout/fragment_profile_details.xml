<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- ROW 1: Firstname / Lastname -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp">

            <!-- Firstname -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLabelFirstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_first_name"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_serif_semibold" />

                <TextView
                    android:id="@+id/tvValueFirstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="42dp"
                    android:background="@drawable/profile_box"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:text="Name"
                    android:textColor="@color/text"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_serif_medium" />
            </LinearLayout>

            <View
                android:layout_width="24dp"
                android:layout_height="0dp" />

            <!-- Lastname -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLabelLastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_last_name"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_serif_semibold" />

                <TextView
                    android:id="@+id/tvValueLastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="42dp"
                    android:background="@drawable/profile_box"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:text="Surname"
                    android:textColor="@color/text"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_serif_medium" />
            </LinearLayout>
        </LinearLayout>

        <!-- RED 2: Address / City (ista Å¡ema) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLabelAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_address"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_serif_semibold" />

                <TextView
                    android:id="@+id/tvValueAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="42dp"
                    android:background="@drawable/profile_box"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:text="Address 100"
                    android:textColor="@color/text"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_serif_medium" />
            </LinearLayout>

            <View
                android:layout_width="24dp"
                android:layout_height="0dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLabelCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_address"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_serif_semibold" />

                <TextView
                    android:id="@+id/tvValueCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="42dp"
                    android:background="@drawable/profile_box"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:text="City"
                    android:textColor="@color/text"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_serif_medium" />
            </LinearLayout>
        </LinearLayout>

        <!-- RED 3: Phone -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tvLabelPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_phone"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_serif_semibold" />

            <TextView
                android:id="@+id/tvValuePhone"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:minHeight="42dp"
                android:background="@drawable/profile_box"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="4dp"
                android:text="111111111"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_serif_medium" />
        </LinearLayout>

        <!-- Dugmad -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCar"
                style="@style/Widget.Button.Ghost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_car"
                android:visibility="gone" />

            <View
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                style="@style/Widget.Button.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_edit" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
