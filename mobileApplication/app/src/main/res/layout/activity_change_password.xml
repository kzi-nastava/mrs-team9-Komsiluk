<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/password_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/passwordScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <LinearLayout
                android:id="@+id/passwordPanel"
                android:layout_width="560dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@drawable/bg_panel_dark">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change_password_title"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_serif_semibold"
                    android:textSize="@dimen/fs_h2" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/tvLabelPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/change_password_new_label"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_serif_semibold"
                    android:textSize="@dimen/fs_lg" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="42dp"
                    android:background="@drawable/bg_input_normal"
                    android:paddingHorizontal="16dp"
                    android:inputType="textPassword"
                    android:fontFamily="@font/roboto_serif_medium"
                    android:textColor="@color/text"
                    android:textSize="16sp"
                    android:imeOptions="actionNext" />

                <TextView
                    android:id="@+id/tvPasswordError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/error"
                    android:textSize="@dimen/fs_sm"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvLabelRepeat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/change_password_repeat_label"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_serif_semibold"
                    android:textSize="@dimen/fs_lg" />

                <EditText
                    android:id="@+id/etRepeat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="42dp"
                    android:background="@drawable/bg_input_normal"
                    android:paddingHorizontal="16dp"
                    android:inputType="textPassword"
                    android:fontFamily="@font/roboto_serif_medium"
                    android:textColor="@color/text"
                    android:textSize="@dimen/fs_lg"
                    android:imeOptions="actionDone" />

                <TextView
                    android:id="@+id/tvRepeatError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/error"
                    android:textSize="@dimen/fs_sm"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_marginTop="24dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCancel"
                        style="@style/Widget.Button.Ghost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/change_password_cancel" />

                    <View
                        android:layout_width="16dp"
                        android:layout_height="0dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnConfirm"
                        style="@style/Widget.Button.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/change_password_confirm" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
