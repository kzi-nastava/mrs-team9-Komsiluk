<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialogRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg_ride_card">

    <org.osmdroid.views.MapView
        android:id="@+id/mapDetails"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintDimensionRatio="H,16:9"/>

    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toBottomOf="@id/mapDetails"
        app:layout_constraintBottom_toTopOf="@id/layoutButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/contentColumn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRouteTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ride details"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_serif_semibold"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                app:dividerColor="@color/white"
                app:dividerThickness="1dp" />

            <TextView
                android:id="@+id/tvPickup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pickup: ..."
                android:textColor="@color/secondary"
                android:fontFamily="@font/roboto_serif_medium"
                android:layout_marginTop="6dp" />

            <LinearLayout
                android:id="@+id/layoutStops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvDestination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Destination: ..."
                android:textColor="@color/secondary"
                android:fontFamily="@font/roboto_serif_medium"
                android:layout_marginTop="4dp" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                app:dividerColor="@color/white"
                app:dividerThickness="1dp" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: ..."
                android:textColor="@color/secondary"
                android:fontFamily="@font/roboto_serif_medium" />

            <TextView
                android:id="@+id/tvStartTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start time: ..."
                android:fontFamily="@font/roboto_serif_medium"
                android:textColor="@color/white"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/tvEndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End time: ..."
                android:fontFamily="@font/roboto_serif_medium"
                android:textColor="@color/white"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvScheduledTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scheduled: ..."
                android:fontFamily="@font/roboto_serif_medium"
                android:textColor="@color/white"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                app:dividerColor="@color/white"
                app:dividerThickness="1dp" />

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Distance: ..."
                android:fontFamily="@font/roboto_serif_medium"
                android:textColor="@color/secondary" />

            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estimated duration: ..."
                android:fontFamily="@font/roboto_serif_medium"
                android:textColor="@color/secondary"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: ..."
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_serif_semibold"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvVehicleType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle type: ..."
                android:textColor="@color/secondary"
                android:fontFamily="@font/roboto_serif_medium"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvPetFriendly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pets allowed: ..."
                android:textColor="@color/secondary"
                android:fontFamily="@font/roboto_serif_medium"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvBabyFriendly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Babies allowed: ..."
                android:textColor="@color/secondary"
                android:fontFamily="@font/roboto_serif_medium"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvDriverTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver:"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_serif_semibold"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                app:dividerColor="@color/white"
                app:dividerThickness="1dp" />

            <TextView
                android:id="@+id/tvDriverName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name: ..."
                android:textColor="@color/secondary"
                android:fontFamily="@font/roboto_serif_medium"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/tvDriverEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email: ..."
                android:textColor="@color/secondary"
                android:fontFamily="@font/roboto_serif_medium"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvDriverPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone: ..."
                android:textColor="@color/secondary"
                android:fontFamily="@font/roboto_serif_medium"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvVehicleInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle: ..."
                android:textColor="@color/secondary"
                android:fontFamily="@font/roboto_serif_medium"
                android:layout_marginTop="4dp" />

<!--            <TextView-->
<!--            android:id="@+id/tvRatingsTitle"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Ratings"-->
<!--            android:textStyle="bold"-->
<!--            android:textColor="@color/white"-->
<!--            android:fontFamily="@font/roboto_serif_semibold"-->
<!--            android:textSize="16sp"-->
<!--            android:layout_marginTop="16dp" />-->


            <!-- Sa ovim: -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/tvRatingsTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ratings"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_serif_semibold"
                    android:textSize="16sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddRating"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leave rating"
                    android:textColor="@color/secondary"
                    android:textSize="12sp"
                    app:iconTint="@color/secondary"
                    app:iconSize="18dp"
                    android:backgroundTint="@color/primary"
                    app:strokeColor="@color/secondary"
                    app:strokeWidth="1dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="4dp" />

            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                app:dividerColor="@color/white"
                app:dividerThickness="1dp" />

            <TextView
                android:id="@+id/tvRatings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No ratings yet"
                android:textColor="@color/secondary"
                android:fontFamily="@font/roboto_serif_medium"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/tvInconsistencyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inconsistency Reports"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_serif_semibold"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                app:dividerColor="@color/white"
                app:dividerThickness="1dp" />

            <TextView
                android:id="@+id/tvInconsistencyReports"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No reports"
                android:textColor="@color/secondary"
                android:fontFamily="@font/roboto_serif_medium"
                android:layout_marginTop="6dp" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                app:dividerColor="@color/white"
                app:dividerThickness="1dp" />

            <TextView
                android:id="@+id/tvPanicFlag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Panic button: No"
                android:textColor="@color/secondary"
                android:fontFamily="@font/roboto_serif_medium"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvCancelFlag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Canceled: No"
                android:textColor="@color/secondary"
                android:fontFamily="@font/roboto_serif_medium"
                android:textSize="14sp"
                android:layout_marginTop="6dp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnFavorite"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/favorite"
            android:contentDescription="@string/cd_favorite"/>

        <View
            android:layout_width="12dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btnClose"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="140dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            android:backgroundTint="@color/primary"
            android:text="Close"
            android:textColor="@color/secondary"
            app:strokeColor="@color/secondary" />

        <Button
            android:id="@+id/btnBookAgain"
            android:layout_width="140dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:text="Book Again"
            android:textAllCaps="false"
            android:backgroundTint="@color/secondary"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_serif_semibold"
            android:layout_marginEnd="8dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>