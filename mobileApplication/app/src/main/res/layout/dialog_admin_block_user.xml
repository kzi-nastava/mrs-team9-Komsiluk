<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_panel"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvBlockDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_block_title"
            android:textColor="@color/white"
            android:textSize="@dimen/fs_h2"
            android:fontFamily="@font/roboto_serif_semibold" />

        <TextView
            android:id="@+id/tvBlockDialogMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/fs_md"
            android:fontFamily="@font/roboto_serif_medium" />

        <TextView
            android:id="@+id/tvReasonLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/dialog_block_reason_label"
            android:textColor="@color/white"
            android:textSize="@dimen/fs_md"
            android:fontFamily="@font/roboto_serif_semibold" />

        <EditText
            android:id="@+id/etBlockReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="42dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_input_normal"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_medium"
            android:hint="@string/dialog_block_reason_hint"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:maxLines="4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBlockCancel"
                style="@style/Widget.Button.Ghost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/btn_cancel" />

            <View
                android:layout_width="10dp"
                android:layout_height="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBlockConfirm"
                style="@style/Widget.Button.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/btn_confirm" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
