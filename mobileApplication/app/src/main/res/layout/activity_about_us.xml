<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aboutScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_marginTop="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/aboutPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_about_panel_top_translucent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvAboutTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_title"
                android:textColor="@color/secondary"
                android:textSize="@dimen/fs_h1"
                android:fontFamily="@font/roboto_serif_semibold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/secondary" />

            <TextView
                android:id="@+id/tvAboutTagline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/about_tagline"
                android:textColor="@color/white"
                android:textSize="@dimen/fs_md"
                android:fontFamily="@font/roboto_serif_medium" />

            <TextView
                android:id="@+id/tvAboutBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="@string/about_body"
                android:textColor="@color/white"
                android:textSize="@dimen/fs_lg"
                android:fontFamily="@font/roboto_serif_medium"
                android:lineSpacingExtra="6dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contactPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_contact_panel_bottom_translucent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvContactTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_title"
                android:textColor="@color/black"
                android:textSize="@dimen/fs_h2"
                android:fontFamily="@font/roboto_serif_semibold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Facebook -->
                    <LinearLayout
                        android:id="@+id/rowFacebook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/facebook"
                            android:tint="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="@string/contact_facebook"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fs_md"
                            android:fontFamily="@font/roboto_serif_medium" />
                    </LinearLayout>

                    <!-- Instagram -->
                    <LinearLayout
                        android:id="@+id/rowInstagram"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/instagram"
                            android:tint="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="@string/contact_instagram"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fs_md"
                            android:fontFamily="@font/roboto_serif_medium" />
                    </LinearLayout>

                    <!-- Phone -->
                    <LinearLayout
                        android:id="@+id/rowPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/phone"
                            android:tint="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="@string/contact_phone"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fs_md"
                            android:fontFamily="@font/roboto_serif_medium" />
                    </LinearLayout>

                    <!-- Email -->
                    <LinearLayout
                        android:id="@+id/rowEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/mail"
                            android:tint="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="@string/contact_email"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fs_md"
                            android:fontFamily="@font/roboto_serif_medium" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTerms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about_terms"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fs_sm"
                        android:fontFamily="@font/roboto_serif_medium" />

                    <TextView
                        android:id="@+id/tvPrivacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/about_privacy"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fs_sm"
                        android:fontFamily="@font/roboto_serif_medium" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
