<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/favCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_dialog_panel"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/tvFavName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Favorite card 1"
        android:textColor="@color/white"
        android:textSize="@dimen/fs_lg"
        android:fontFamily="@font/roboto_serif_semibold" />

    <!-- Pickup row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fav_pickup_label"
            android:textColor="@color/white"
            android:textSize="@dimen/fs_md"
            android:fontFamily="@font/roboto_serif_medium"/>

        <TextView
            android:id="@+id/tvFavPickupValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:textColor="@color/secondary"
            android:textSize="@dimen/fs_md"
            android:fontFamily="@font/roboto_serif_semibold"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>

    <!-- Destination row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fav_destination_label"
            android:textColor="@color/white"
            android:textSize="@dimen/fs_md"
            android:fontFamily="@font/roboto_serif_medium"/>

        <TextView
            android:id="@+id/tvFavDestinationValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:textColor="@color/secondary"
            android:textSize="@dimen/fs_md"
            android:fontFamily="@font/roboto_serif_semibold"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>

</LinearLayout>
