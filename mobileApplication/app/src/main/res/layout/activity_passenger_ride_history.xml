<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <include layout="@layout/view_textured_bg" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnFilterByDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="FILTER"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:backgroundTint="@color/secondary"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_serif_medium"
            android:layout_margin="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvSortByLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sort by:"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_serif_medium"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/btnFilterByDate"
            app:layout_constraintStart_toStartOf="parent" />

        <Spinner
            android:id="@+id/spinnerSortField"
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:layout_constraintHorizontal_weight="0.8"
            android:dropDownWidth="wrap_content"
            android:popupBackground="@color/black"
            android:background="@drawable/bg_spinner_rectangular"
            android:dropDownVerticalOffset="0dp"
            android:overlapAnchor="false"
            android:spinnerMode="dropdown"
            android:paddingStart="12dp"
            android:paddingEnd="36dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@id/tvSortByLabel"
            app:layout_constraintBottom_toBottomOf="@id/tvSortByLabel"
            app:layout_constraintStart_toEndOf="@id/tvSortByLabel"
            app:layout_constraintEnd_toStartOf="@id/spinnerSortDirection" />

        <Spinner
            android:id="@+id/spinnerSortDirection"
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:layout_constraintHorizontal_weight="1.2"
            android:dropDownVerticalOffset="0dp"
            android:dropDownWidth="wrap_content"
            android:popupBackground="@color/black"
            android:background="@drawable/bg_spinner_rectangular"
            android:overlapAnchor="false"
            android:spinnerMode="dropdown"
            android:paddingStart="12dp"
            android:paddingEnd="36dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="@id/spinnerSortField"
            app:layout_constraintBottom_toBottomOf="@id/spinnerSortField"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHistory"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerSortField"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:indeterminateTint="@color/secondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>