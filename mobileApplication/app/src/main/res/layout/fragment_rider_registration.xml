<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="24dp"
        android:paddingBottom="24dp">

        <LinearLayout
            android:id="@+id/loginPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/bg_panel_dark"
            android:maxWidth="480dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/auth_registration_title"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_serif_semibold"
                android:textSize="@dimen/fs_h2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:background="@color/white" />

            <!-- Firstname -->
            <TextView
                android:id="@+id/tvLabelFirstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_first_name"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_serif_semibold" />

            <EditText
                android:id="@+id/etFirstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="42dp"
                android:background="@drawable/bg_input_normal"
                android:paddingHorizontal="16dp"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_serif_medium"
                android:imeOptions="actionNext" />

            <TextView
                android:id="@+id/tvErrorFirstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/error"
                android:textSize="@dimen/fs_sm"
                android:visibility="gone"
                android:layout_marginBottom="12dp" />

            <!-- Lastname -->
            <TextView
                android:id="@+id/tvLabelLastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_last_name"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_serif_semibold" />

            <EditText
                android:id="@+id/etLastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="42dp"
                android:background="@drawable/bg_input_normal"
                android:paddingHorizontal="16dp"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_serif_medium"
                android:imeOptions="actionNext" />

            <TextView
                android:id="@+id/tvErrorLastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/error"
                android:textSize="@dimen/fs_sm"
                android:visibility="gone"
                android:layout_marginBottom="12dp" />

            <!-- Address -->
            <TextView
                android:id="@+id/tvLabelAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_address"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_serif_semibold" />

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="42dp"
                android:background="@drawable/bg_input_normal"
                android:paddingHorizontal="16dp"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_serif_medium"
                android:imeOptions="actionNext" />

            <TextView
                android:id="@+id/tvErrorAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/error"
                android:textSize="@dimen/fs_sm"
                android:visibility="gone"
                android:layout_marginBottom="12dp" />

            <!-- City -->
            <TextView
                android:id="@+id/tvLabelCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_city"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_serif_semibold" />

            <EditText
                android:id="@+id/etCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="42dp"
                android:background="@drawable/bg_input_normal"
                android:paddingHorizontal="16dp"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_serif_medium"
                android:imeOptions="actionNext" />

            <TextView
                android:id="@+id/tvErrorCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/error"
                android:textSize="@dimen/fs_sm"
                android:visibility="gone"
                android:layout_marginBottom="12dp" />

            <!-- Phone -->
            <TextView
                android:id="@+id/tvLabelPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_phone"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_serif_semibold" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="42dp"
                android:background="@drawable/bg_input_normal"
                android:paddingHorizontal="16dp"
                android:inputType="phone"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_serif_medium"
                android:imeOptions="actionDone" />

            <TextView
                android:id="@+id/tvErrorPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/error"
                android:textSize="@dimen/fs_sm"
                android:visibility="gone"
                android:layout_marginBottom="24dp" />

            <!-- Email -->
            <TextView
                android:id="@+id/tvLabelEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/auth_email"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_serif_semibold" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="42dp"
                android:background="@drawable/bg_input_normal"
                android:paddingHorizontal="16dp"
                android:inputType="textEmailAddress"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_serif_medium"
                android:imeOptions="actionDone" />

            <TextView
                android:id="@+id/tvErrorEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/error"
                android:textSize="@dimen/fs_sm"
                android:visibility="gone"
                android:layout_marginBottom="24dp" />

            <!-- Password -->
            <TextView
                android:id="@+id/tvLabelPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/auth_password"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_serif_semibold" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="42dp"
                android:background="@drawable/bg_input_normal"
                android:paddingHorizontal="16dp"
                android:inputType="textPassword"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_serif_medium"
                android:imeOptions="actionDone" />

            <TextView
                android:id="@+id/tvErrorPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/error"
                android:textSize="@dimen/fs_sm"
                android:visibility="gone"
                android:layout_marginBottom="24dp" />

            <!-- Repeat Password -->
            <TextView
                android:id="@+id/tvLabelRepeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/auth_repeat_password"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_serif_semibold" />

            <EditText
                android:id="@+id/etRepeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="42dp"
                android:background="@drawable/bg_input_normal"
                android:paddingHorizontal="16dp"
                android:inputType="textPassword"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_serif_medium"
                android:imeOptions="actionDone" />

            <TextView
                android:id="@+id/tvErrorRepeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/error"
                android:textSize="@dimen/fs_sm"
                android:visibility="gone"
                android:layout_marginBottom="24dp" />

            <!-- Profile Photo -->
            <TextView
                android:id="@+id/tvLabelProfilePhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/auth_profile_photo"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_serif_semibold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="6dp"
                android:background="@drawable/bg_profile_photo_selector"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:id="@+id/ivProfilePhoto"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_profile"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/profile_photo" />

                <TextView
                    android:id="@+id/tvChoosePhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/auth_choose_photo"
                    android:textColor="@color/secondary"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="24dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSubmit"
                    style="@style/Widget.Button.Primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/auth_submit" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>
