<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/loginPanel"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/bg_panel_dark">


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_title"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_serif_semibold"
            android:textSize="@dimen/fs_h2" />


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tvLabelEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_email_label"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_serif_semibold"
            android:textSize="@dimen/fs_lg" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="42dp"
            android:background="@drawable/bg_input_normal"
            android:paddingHorizontal="16dp"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/roboto_serif_medium"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:imeOptions="actionNext" />

        <TextView
            android:id="@+id/tvEmailError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/error"
            android:textSize="@dimen/fs_sm"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tvLabelPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/login_password_label"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_serif_semibold"
            android:textSize="@dimen/fs_lg" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="42dp"
            android:background="@drawable/bg_input_normal"
            android:paddingHorizontal="16dp"
            android:inputType="textPassword"
            android:fontFamily="@font/roboto_serif_medium"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:imeOptions="actionDone" />

        <TextView
            android:id="@+id/tvPasswordError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/error"
            android:textSize="@dimen/fs_sm"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/login_forgot_password"
            android:textColor="@color/secondary"
            android:textSize="@dimen/fs_sm" />

        <TextView
            android:id="@+id/tvCreateAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/login_create_account"
            android:textColor="@color/secondary"
            android:textSize="@dimen/fs_sm" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="24dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                style="@style/Widget.Button.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_confirm" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
