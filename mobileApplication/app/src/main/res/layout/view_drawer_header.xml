<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/imgDrawerLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/app_logo"
        android:scaleType="fitCenter" />

    <View
        android:id="@+id/drawerHeaderDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/secondary" />

    <LinearLayout
        android:id="@+id/driverStatusHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <!-- red: status + switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvDriverStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Active"
                android:textSize="@dimen/fs_h2"
                android:fontFamily="@font/roboto_serif_semibold"
                android:textColor="@color/green"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/swDriverActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:trackTint="@color/secondary"/>
        </LinearLayout>

        <!-- active today -->
        <TextView
            android:id="@+id/tvDriverActiveToday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Active today: 0m"
            android:textColor="@color/white"
            android:textSize="@dimen/fs_sm"
            android:fontFamily="@font/roboto_serif_semibold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/secondary"/>
    </LinearLayout>

</LinearLayout>
