<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_panel"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TITLE ROW: name + Change name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvFavDetailsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/favorites_details_title"
                android:textColor="@color/white"
                android:textSize="@dimen/fs_h2"
                android:fontFamily="@font/roboto_serif_semibold" />

            <TextView
                android:id="@+id/btnFavDetailsChangeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/favorites_change_name"
                android:textColor="@color/secondary"
                android:textSize="@dimen/fs_sm"
                android:fontFamily="@font/roboto_serif_semibold"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp" />
        </LinearLayout>

        <!-- Pickup -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fav_pickup_label"
                android:textColor="@color/white"
                android:textSize="@dimen/fs_md"
                android:fontFamily="@font/roboto_serif_medium" />

            <TextView
                android:id="@+id/tvDetailsPickupValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:textColor="@color/secondary"
                android:textSize="@dimen/fs_md"
                android:fontFamily="@font/roboto_serif_semibold"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Destination -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fav_destination_label"
                android:textColor="@color/white"
                android:textSize="@dimen/fs_md"
                android:fontFamily="@font/roboto_serif_medium" />

            <TextView
                android:id="@+id/tvDetailsDestinationValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:textColor="@color/secondary"
                android:textSize="@dimen/fs_md"
                android:fontFamily="@font/roboto_serif_semibold"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Stations count -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fav_details_stations"
                android:textColor="@color/white"
                android:textSize="@dimen/fs_md"
                android:fontFamily="@font/roboto_serif_medium" />

            <TextView
                android:id="@+id/tvDetailsStationsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textColor="@color/secondary"
                android:textSize="@dimen/fs_md"
                android:fontFamily="@font/roboto_serif_semibold" />
        </LinearLayout>

        <!-- Stations list -->
        <LinearLayout
            android:id="@+id/containerStations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="vertical" />

        <!-- Users count -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fav_details_users"
                android:textColor="@color/white"
                android:textSize="@dimen/fs_md"
                android:fontFamily="@font/roboto_serif_medium" />

            <TextView
                android:id="@+id/tvDetailsUsersValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textColor="@color/secondary"
                android:textSize="@dimen/fs_md"
                android:fontFamily="@font/roboto_serif_semibold" />
        </LinearLayout>

        <!-- Users list -->
        <LinearLayout
            android:id="@+id/containerUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="vertical" />

        <!-- Car type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fav_details_car_type"
                android:textColor="@color/white"
                android:textSize="@dimen/fs_md"
                android:fontFamily="@font/roboto_serif_medium" />

            <TextView
                android:id="@+id/tvDetailsCarTypeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textColor="@color/secondary"
                android:textSize="@dimen/fs_md"
                android:fontFamily="@font/roboto_serif_semibold" />
        </LinearLayout>

        <!-- Pet friendly -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fav_details_pet"
                android:textColor="@color/white"
                android:textSize="@dimen/fs_md"
                android:fontFamily="@font/roboto_serif_medium" />

            <TextView
                android:id="@+id/tvDetailsPetValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textColor="@color/secondary"
                android:textSize="@dimen/fs_md"
                android:fontFamily="@font/roboto_serif_semibold" />
        </LinearLayout>

        <!-- Child seat -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fav_details_child"
                android:textColor="@color/white"
                android:textSize="@dimen/fs_md"
                android:fontFamily="@font/roboto_serif_medium" />

            <TextView
                android:id="@+id/tvDetailsChildValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textColor="@color/secondary"
                android:textSize="@dimen/fs_md"
                android:fontFamily="@font/roboto_serif_semibold" />
        </LinearLayout>

        <!-- Estimated values title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="@string/estimated_values"
            android:textColor="@color/white"
            android:textSize="@dimen/fs_md"
            android:fontFamily="@font/roboto_serif_semibold" />

        <!-- Estimated values rows -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <!-- KM -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/route"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/secondary"/>

                <TextView
                    android:id="@+id/tvFavKm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_kilometers"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fs_md"
                    android:fontFamily="@font/roboto_serif_medium" />
            </LinearLayout>

            <!-- TIME -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/clock"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/secondary"/>

                <TextView
                    android:id="@+id/tvFavTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_time"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fs_md"
                    android:fontFamily="@font/roboto_serif_medium" />
            </LinearLayout>

            <!-- PRICE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/money"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/secondary"/>

                <TextView
                    android:id="@+id/tvFavPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_price"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fs_md"
                    android:fontFamily="@font/roboto_serif_medium" />
            </LinearLayout>
        </LinearLayout>

        <!-- Buttons: equal width -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFavDetailsCancel"
                style="@style/Widget.Button.Ghost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/btn_cancel" />

            <View
                android:layout_width="10dp"
                android:layout_height="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFavDetailsDelete"
                style="@style/Widget.Button.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/btn_delete" />

            <View
                android:layout_width="10dp"
                android:layout_height="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFavDetailsBook"
                style="@style/Widget.Button.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/btn_book" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
