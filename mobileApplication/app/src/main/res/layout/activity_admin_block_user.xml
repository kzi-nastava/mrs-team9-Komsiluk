<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/rootBlockUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvBlockUserTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/admin_block_user_title"
            android:textColor="@color/secondary"
            android:textSize="@dimen/fs_h1"
            android:fontFamily="@font/roboto_serif_semibold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <TextView
            android:id="@+id/tvLabelUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/admin_block_user_label_user"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_semibold" />

        <AutoCompleteTextView
            android:id="@+id/actUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="42dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_input_normal"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_medium"
            android:hint="@string/admin_block_user_hint_email"
            android:inputType="textEmailAddress"
            android:imeOptions="actionDone"
            android:completionThreshold="3"
            android:dropDownWidth="match_parent"
            android:dropDownHeight="wrap_content"
            android:dropDownVerticalOffset="4dp"
            android:popupBackground="@drawable/bg_dialog_panel"
            android:drawablePadding="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="14dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBlockUser"
            style="@style/Widget.Button.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_block"
            android:enabled="false" />

    </LinearLayout>
</ScrollView>
