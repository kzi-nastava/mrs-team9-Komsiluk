<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Firstname -->
        <TextView
            android:id="@+id/tvLabelFirstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_first_name"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_semibold" />

        <EditText
            android:id="@+id/etFirstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="42dp"
            android:background="@drawable/bg_input_normal"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_medium"
            android:imeOptions="actionNext" />

        <TextView
            android:id="@+id/tvErrorFirstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/error"
            android:textSize="@dimen/fs_sm"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <!-- Lastname -->
        <TextView
            android:id="@+id/tvLabelLastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_last_name"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_semibold" />

        <EditText
            android:id="@+id/etLastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="42dp"
            android:background="@drawable/bg_input_normal"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_medium"
            android:imeOptions="actionNext" />

        <TextView
            android:id="@+id/tvErrorLastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/error"
            android:textSize="@dimen/fs_sm"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <!-- Address -->
        <TextView
            android:id="@+id/tvLabelAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_address"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_semibold" />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="42dp"
            android:background="@drawable/bg_input_normal"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_medium"
            android:imeOptions="actionNext" />

        <TextView
            android:id="@+id/tvErrorAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/error"
            android:textSize="@dimen/fs_sm"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <!-- City -->
        <TextView
            android:id="@+id/tvLabelCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_city"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_semibold" />

        <EditText
            android:id="@+id/etCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="42dp"
            android:background="@drawable/bg_input_normal"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_medium"
            android:imeOptions="actionNext" />

        <TextView
            android:id="@+id/tvErrorCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/error"
            android:textSize="@dimen/fs_sm"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <!-- Phone -->
        <TextView
            android:id="@+id/tvLabelPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_phone"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_semibold" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="42dp"
            android:background="@drawable/bg_input_normal"
            android:paddingHorizontal="16dp"
            android:inputType="phone"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_medium"
            android:imeOptions="actionDone" />

        <TextView
            android:id="@+id/tvErrorPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/error"
            android:textSize="@dimen/fs_sm"
            android:visibility="gone"
            android:layout_marginBottom="24dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="20dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                style="@style/Widget.Button.Ghost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_cancel" />

            <View
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                style="@style/Widget.Button.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_save" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
