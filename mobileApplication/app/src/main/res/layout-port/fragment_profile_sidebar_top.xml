<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="24dp"
    android:paddingTop="24dp"
    android:paddingBottom="16dp"
    android:background="@color/profile_sidebar_top">

    <!-- Avatar: circle + icon -->
    <FrameLayout
        android:id="@+id/avatarContainer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/profile_avatar_circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgAvatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:contentDescription="@string/profile_avatar_content_description"
            android:src="@drawable/ic_launcher_foreground"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay" />
    </FrameLayout>

    <!-- name + email -->
    <LinearLayout
        android:id="@+id/identityContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginStart="22dp"
        app:layout_constraintTop_toTopOf="@id/avatarContainer"
        app:layout_constraintBottom_toBottomOf="@id/avatarContainer"
        app:layout_constraintStart_toEndOf="@id/avatarContainer"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_default_name"
            android:textColor="@color/text"
            android:fontFamily="@font/roboto_serif_semibold"
            android:textSize="@dimen/fs_h1" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="@string/profile_default_email"
            android:textColor="@color/text"
            android:fontFamily="@font/roboto_serif_semibold"
            android:textSize="@dimen/fs_lg" />
    </LinearLayout>

    <!-- Change image -->
    <TextView
        android:id="@+id/btnChangeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_change_image"
        android:textColor="@color/text"
        android:fontFamily="@font/roboto_serif_semibold"
        android:textSize="@dimen/fs_sm"
        app:layout_constraintStart_toStartOf="@id/avatarContainer"
        app:layout_constraintTop_toBottomOf="@id/avatarContainer"
        android:layout_marginTop="8dp" />

    <!-- Change password -->
    <TextView
        android:id="@+id/btnChangePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_change_password"
        android:textColor="@color/text"
        android:fontFamily="@font/roboto_serif_semibold"
        android:textSize="@dimen/fs_sm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/btnChangeImage" />

</androidx.constraintlayout.widget.ConstraintLayout>
