<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Firstname -->
        <TextView
            android:id="@+id/tvLabelFirstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_first_name"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_semibold" />

        <EditText
            android:id="@+id/etFirstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="42dp"
            android:background="@drawable/bg_input_normal"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_medium"
            android:imeOptions="actionNext" />

        <TextView
            android:id="@+id/tvErrorFirstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/error"
            android:textSize="@dimen/fs_sm"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <!-- Lastname -->
        <TextView
            android:id="@+id/tvLabelLastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_last_name"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_semibold" />

        <EditText
            android:id="@+id/etLastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="42dp"
            android:background="@drawable/bg_input_normal"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_medium"
            android:imeOptions="actionNext" />

        <TextView
            android:id="@+id/tvErrorLastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/error"
            android:textSize="@dimen/fs_sm"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <!-- Address -->
        <TextView
            android:id="@+id/tvLabelAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_address"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_semibold" />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="42dp"
            android:background="@drawable/bg_input_normal"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_medium"
            android:imeOptions="actionNext" />

        <TextView
            android:id="@+id/tvErrorAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/error"
            android:textSize="@dimen/fs_sm"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <!-- City -->
        <TextView
            android:id="@+id/tvLabelCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_city"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_semibold" />

        <EditText
            android:id="@+id/etCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="42dp"
            android:background="@drawable/bg_input_normal"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_medium"
            android:imeOptions="actionNext" />

        <TextView
            android:id="@+id/tvErrorCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/error"
            android:textSize="@dimen/fs_sm"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <!-- Phone -->
        <TextView
            android:id="@+id/tvLabelPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_phone"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_semibold" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="42dp"
            android:background="@drawable/bg_input_normal"
            android:paddingHorizontal="16dp"
            android:inputType="phone"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_medium"
            android:imeOptions="actionDone" />

        <TextView
            android:id="@+id/tvErrorPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/error"
            android:textSize="@dimen/fs_sm"
            android:visibility="gone"
            android:layout_marginBottom="24dp" />

        <!-- Model -->
        <TextView
            android:id="@+id/tvLabelModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_car_model"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_semibold" />

        <EditText
            android:id="@+id/etModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="42dp"
            android:background="@drawable/bg_input_normal"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_medium"
            android:imeOptions="actionNext" />

        <TextView
            android:id="@+id/tvErrorModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/error"
            android:textSize="@dimen/fs_sm"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <!-- Type -->
        <TextView
            android:id="@+id/tvLabelType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_type"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_semibold" />

        <AutoCompleteTextView
            android:id="@+id/etType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="42dp"
            android:background="@drawable/bg_input_normal"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_medium"
            android:inputType="none"
            android:imeOptions="actionNext"
            android:drawableEnd="@drawable/arrow_drop_down"
            android:drawablePadding="8dp"
            android:entries="@array/car_types" />

        <TextView
            android:id="@+id/tvErrorType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/error"
            android:textSize="@dimen/fs_sm"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <!-- Licence plate -->
        <TextView
            android:id="@+id/tvLabelLicence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_licence_plate"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_semibold" />

        <EditText
            android:id="@+id/etLicence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="42dp"
            android:background="@drawable/bg_input_normal"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_medium"
            android:imeOptions="actionNext" />

        <TextView
            android:id="@+id/tvErrorLicence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/error"
            android:textSize="@dimen/fs_sm"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <!-- Seats -->
        <TextView
            android:id="@+id/tvLabelSeats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_num_seats"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_semibold" />

        <EditText
            android:id="@+id/etSeats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="42dp"
            android:background="@drawable/bg_input_normal"
            android:paddingHorizontal="16dp"
            android:inputType="number"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_serif_medium"
            android:imeOptions="actionNext" />

        <TextView
            android:id="@+id/tvErrorSeats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/error"
            android:textSize="@dimen/fs_sm"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <!-- Checkboxes row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginBottom="24dp">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cbPetFriendly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_pet_friendly"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_serif_semibold"
                app:buttonTint="@color/secondary"
                app:checkedIconTint="@color/white" />

            <View
                android:layout_width="15dp"
                android:layout_height="0dp" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cbChildSeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_child_seat"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_serif_semibold"
                app:buttonTint="@color/secondary"
                app:checkedIconTint="@color/white"/>
        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                style="@style/Widget.Button.Ghost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_cancel" />

            <View
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirm"
                style="@style/Widget.Button.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_confirm" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
