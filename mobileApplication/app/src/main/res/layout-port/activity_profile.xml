<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Sidebar -->
    <LinearLayout
        android:id="@+id/sidebar_panel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/sidebar_top_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@color/profile_sidebar_top" />

        <LinearLayout
            android:id="@+id/sidebar_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="-6dp"
            android:layout_marginBottom="-6dp"
            android:elevation="4dp">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/profile_divider_diamond"
                android:rotation="45" />

            <View
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_weight="2"
                android:background="@color/text" />

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/profile_divider_diamond"
                android:rotation="45" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/sidebar_bottom_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/profile_sidebar_bottom" />
    </LinearLayout>

    <!-- Details -->
    <FrameLayout
        android:id="@+id/details_panel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@color/profile_details_bg"
        android:padding="24dp" />
</LinearLayout>
