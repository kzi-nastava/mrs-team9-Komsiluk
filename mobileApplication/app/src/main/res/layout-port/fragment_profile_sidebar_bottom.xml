<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- Menu row -->
    <LinearLayout
        android:id="@+id/menuContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomRow">

        <!-- First row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Favorite rides -->
            <LinearLayout
                android:id="@+id/btnFavoriteRides"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:focusable="true">

                <ImageView
                    android:id="@+id/iconFavoriteRides"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/favorite"
                    app:tint="@color/secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/profile_menu_favorite_rides"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_serif_semibold"
                    android:textSize="@dimen/fs_lg" />
            </LinearLayout>

            <!-- Ride history -->
            <LinearLayout
                android:id="@+id/btnRideHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:focusable="true">

                <ImageView
                    android:id="@+id/iconRideHistory"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/history"
                    app:tint="@color/secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/profile_menu_ride_history"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_serif_semibold"
                    android:textSize="@dimen/fs_lg" />
            </LinearLayout>
        </LinearLayout>

        <!-- Second row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Usage report -->
            <LinearLayout
                android:id="@+id/btnUsageReport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:focusable="true">

                <ImageView
                    android:id="@+id/iconUsageReport"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/report"
                    app:tint="@color/secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/profile_menu_usage_report"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_serif_semibold"
                    android:textSize="@dimen/fs_lg" />
            </LinearLayout>

            <!-- Support -->
            <LinearLayout
                android:id="@+id/btnSupport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:focusable="true">

                <ImageView
                    android:id="@+id/iconSupport"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/support"
                    app:tint="@color/secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/profile_menu_support"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_serif_semibold"
                    android:textSize="@dimen/fs_lg" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- Bottom row -->
    <LinearLayout
        android:id="@+id/bottomRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Active today (biÄ‡e GONE za usera) -->
        <TextView
            android:id="@+id/tvActiveToday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/profile_active_today_placeholder"
            android:textColor="@color/text"
            android:fontFamily="@font/roboto_serif_semibold"
            android:textSize="@dimen/fs_sm" />

        <!-- Log out dugme -->
        <LinearLayout
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/tvLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_logout"
                android:textColor="@color/text"
                android:fontFamily="@font/roboto_serif_semibold"
                android:textSize="@dimen/fs_sm" />

            <ImageView
                android:id="@+id/iconLogout"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/log_out"
                app:tint="@color/text" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
